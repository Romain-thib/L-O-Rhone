<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.sae.odf.controller.CommandesController">
   <children>
      <Label text="Gestion des Commandes" style="-fx-font-size: 18px; -fx-font-weight: bold;">
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <HBox spacing="20.0">
         <children>
            <!-- Partie gauche - Liste des commandes -->
            <VBox spacing="10.0" prefWidth="400.0">
               <children>
                  <Label text="Liste des commandes :" style="-fx-font-weight: bold;" />
                  <ListView fx:id="commandesListView" prefHeight="300.0" />
                  
                  <!-- Boutons d'action -->
                  <HBox spacing="10.0" alignment="CENTER">
                     <children>
                        <Button fx:id="ajouterButton" text="Ajouter" onAction="#onAjouter" 
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="80.0" />
                        <Button fx:id="modifierButton" text="Modifier" onAction="#onModifier" 
                                style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="80.0" />
                        <Button fx:id="supprimerButton" text="Supprimer" onAction="#onSupprimer" 
                                style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="80.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Partie droite - Détails de la commande -->
            <VBox spacing="10.0" prefWidth="400.0">
               <children>
                  <Label text="Détails de la commande :" style="-fx-font-weight: bold;" />
                  
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="ID Commande :" minWidth="100.0" />
                        <TextField fx:id="idCommandeTextField" editable="false" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0" alignment="CENTER_LEFT">
                     <children>
                        <Label text="Client :" minWidth="100.0" />
                        <TextField fx:id="clientTextField" editable="false" prefWidth="200.0" />
                     </children>
                  </HBox>
                  
                  <Label text="Lignes de commande :" style="-fx-font-weight: bold;" />
                  <ListView fx:id="lignesCommandeListView" prefHeight="200.0" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      
      <!-- Bouton retour -->
      <HBox alignment="CENTER">
         <children>
            <Button text="Retour à l'accueil" onAction="#retourAccueil" 
                    style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" prefWidth="150.0" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>