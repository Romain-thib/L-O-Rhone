<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="fr.univartois.butinfo.sae.odf.controller.CommandesController">
   
   <left>
      <VBox spacing="10.0">
         <children>
            <Label text="Liste des Commandes" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <ListView fx:id="commandesListView" prefHeight="400.0" prefWidth="300.0"/>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="addButton" text="Ajouter" onAction="#handleAdd"/>
                  <Button fx:id="editButton" text="Modifier" onAction="#handleEdit"/>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   
   <center>
      <VBox spacing="15.0">
         <children>
            <Label text="Détails de la Commande" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
               </columnConstraints>
               
               <children>
                  <Label text="ID Commande:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="idCommandeTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Client:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="clientTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Lignes de commande:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <ListView fx:id="lignesCommandeListView" prefHeight="200.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
               </children>
            </GridPane>
            
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="saveButton" onAction="#handleSave" text="Sauvegarder" />
                  <Button fx:id="cancelButton" onAction="#handleCancel" text="Annuler" />
                  <Button fx:id="deleteButton" onAction="#handleDelete" text="Supprimer" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="homeButton" onAction="#handleHome" text="Retour à l'accueil"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
