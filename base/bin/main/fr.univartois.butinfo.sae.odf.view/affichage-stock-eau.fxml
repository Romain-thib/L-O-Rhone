<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="fr.univartois.butinfo.sae.odf.controller.StockEauController">
   
   <left>
      <VBox spacing="10.0">
         <children>
            <Label text="Liste des Stocks d'Eau" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <ListView fx:id="stockEauListView" prefHeight="400.0" prefWidth="300.0"/>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="addButton" text="Ajouter" onAction="#handleAdd"/>
                  <Button fx:id="editButton" text="Modifier" onAction="#handleEdit"/>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   
   <center>
      <VBox spacing="15.0">
         <children>
            <Label text="Détails du Stock d'Eau" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
               </columnConstraints>
               
               <children>
                  <Label text="Catégorie:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <TextField fx:id="categorieTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Entrepôt:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <TextField fx:id="entrepotTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Quantité disponible:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <TextField fx:id="quantiteTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="saveButton" onAction="#handleSave" text="Sauvegarder" />
                  <Button fx:id="cancelButton" onAction="#handleCancel" text="Annuler" />
                  <Button fx:id="deleteButton" onAction="#handleDelete" text="Supprimer" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
