<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.sae.odf.controller.AjoutModificationClientController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ajout / Modification Client" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Type de client -->
            <VBox spacing="5.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Type de Client *" />
                  <ComboBox fx:id="typeClientComboBox" prefWidth="200.0" />
               </children>
            </VBox>
            
            <!-- Informations personnelles (pour particuliers) -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Informations personnelles" />
                  
                  <HBox spacing="10.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Nom *" />
                              <TextField fx:id="nomTextField" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Prénom *" />
                              <TextField fx:id="prenomTextField" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Coordonnées -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Coordonnées" />
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Email *" />
                        <TextField fx:id="emailTextField" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Téléphone *" />
                        <TextField fx:id="telephoneTextField" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Adresse -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Adresse" />
                  
                  <HBox spacing="10.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Numéro" />
                              <TextField fx:id="numeroAdresseTextField" prefWidth="80.0" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Rue" />
                              <TextField fx:id="rueAdresseTextField" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  
                  <HBox spacing="10.0">
                     <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Code Postal" />
                              <TextField fx:id="codePostalTextField" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Ville" />
                              <TextField fx:id="villeTextField" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Département" />
                              <TextField fx:id="departementTextField" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onValider" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;" text="Valider" />
            <Button mnemonicParsing="false" onAction="#onAnnuler" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20;" text="Annuler" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>