<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.sae.odf.controller.AjoutModificationCommandesController">
   <children>
      <Label text="Ajout/Modification de Commande" style="-fx-font-size: 18px; -fx-font-weight: bold;">
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <VBox spacing="10.0">
         <children>
            <Label text="Client :" />
            <ComboBox fx:id="clientComboBox" prefWidth="300.0" promptText="Sélectionnez un client" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
      
      <VBox spacing="10.0">
         <children>
            <Label text="Ajouter une ligne de commande :" style="-fx-font-weight: bold;" />
            
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label text="Eau :" minWidth="50.0" />
                  <ComboBox fx:id="eauComboBox" prefWidth="200.0" promptText="Sélectionnez une eau" />
               </children>
            </HBox>
            
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label text="Quantité :" minWidth="50.0" />
                  <TextField fx:id="quantiteTextField" prefWidth="100.0" promptText="Quantité" />
                  <Button fx:id="ajouterLigneButton" text="Ajouter" onAction="#onAjouterLigne" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
      
      <VBox spacing="10.0">
         <children>
            <Label text="Lignes de commande :" style="-fx-font-weight: bold;" />
            <ListView fx:id="lignesListView" prefHeight="200.0" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="supprimerLigneButton" text="Supprimer ligne sélectionnée" onAction="#onSupprimerLigne" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </VBox>
      
      <HBox spacing="20.0" alignment="CENTER">
         <children>
            <Button fx:id="validerButton" text="Valider" onAction="#onValider" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="100.0" />
            <Button fx:id="annulerButton" text="Annuler" onAction="#onAnnuler" style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="100.0" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>