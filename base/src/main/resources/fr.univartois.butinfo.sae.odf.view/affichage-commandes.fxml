<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.univartois.butinfo.sae.odf.controller.CommandesController">
   <children>
      <Label text="Gestion des Commandes" style="-fx-font-size: 18px; -fx-font-weight: bold;">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <HBox>
         <children>
            <!-- Liste des commandes -->
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Liste des Commandes" style="-fx-font-weight: bold;" />
                  <ListView fx:id="commandesListView" prefHeight="300.0" prefWidth="300.0">
                     <VBox.margin>
                        <Insets bottom="10.0" right="10.0" top="5.0" />
                     </VBox.margin>
                  </ListView>
               </children>
            </VBox>
            
            <!-- Détails de la commande sélectionnée -->
            <VBox prefWidth="300.0">
               <children>
                  <Label text="Détails de la Commande" style="-fx-font-weight: bold;" />
                  
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="ID Commande:" prefWidth="100.0" />
                        <TextField fx:id="idCommandeTextField" editable="false" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Client:" prefWidth="100.0" />
                        <TextField fx:id="clientTextField" editable="false" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                     </VBox.margin>
                  </HBox>
                  
                  <Label text="Lignes de Commande" style="-fx-font-weight: bold;" />
                  <ListView fx:id="lignesCommandeListView" prefHeight="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                     </VBox.margin>
                  </ListView>
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </HBox>
      
      <!-- Bouton retour -->
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#retourAccueil" text="Retour à l'Accueil" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
